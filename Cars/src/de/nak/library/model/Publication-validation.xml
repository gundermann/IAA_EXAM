<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="title">
		<field-validator type="requiredstring">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="nakId">
		<field-validator type="required">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="dateOfPublication">
		<field-validator type="required">
			<message key="msg.validator.required"/>
		</field-validator>
	</field>
	<field name="quantity">
		<field-validator type="required">
			<message key="msg.validator.required"/>
		</field-validator>
		<field-validator type="int">
		<param name="min">1</param>
		<message key="msg.quantity.min"/>
		</field-validator>
	</field>
	<field name="isbn">
		<field-validator type="long">
		<param name="min">1000000000000</param>
		<param name="max">9999999999999</param>
		<message key="msg.isbn.lenght"/>
		</field-validator>
	</field>
</validators>