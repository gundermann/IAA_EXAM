<tiles-definitions>
	<!-- The main layout. -->
	<definition name="mainLayout" template="/layout/mainLayout.jsp">
		<put-attribute name="title" value="Library" />
		<put-attribute name="header" value="/header.jsp" />
	</definition>

	<!-- LENDINGMANAGEMENT -->
	<!-- the form for a new lending -->
	<definition name="lendingForm" extends="mainLayout">
		<put-attribute name="content"
			value="/LendingManagement/lendingForm.jsp" />
	</definition>
	<!-- the list of the existing lendings -->
	<definition name="lendingList" extends="mainLayout">
		<put-attribute name="content"
			value="/LendingManagement/lendingList.jsp" />
	</definition>


	<!-- INVENTORYMANAGEMENT -->
	<!-- The menu of the inventory management -->
	<definition name="inventoryManagement" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/inventoryManagement.jsp" />
	</definition>
	<!-- form for publications to set up the type -->
	<definition name="publicationFormForAuthors" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationFormForAuthors.jsp" />
	</definition>
	<!-- form for publications -->
	<definition name="publicationForm" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationForm.jsp" />
	</definition>
	<!-- form for publications to edit -->
	<definition name="publicationEditForm" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationEditForm.jsp" />
	</definition>
	<!-- form for common publication search -->
	<definition name="publicationSearchForm" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationSearchForm.jsp" />
	</definition>
	<!-- form for common publication search by isbn-->
	<definition name="publicationSearchIsbnForm" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationSearchIsbnForm.jsp" />
	</definition>
	<!-- form for publisher setup for publication -->
	<definition name="publisherSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publisherSetupForm.jsp" />
	</definition>
	<!-- form for publication type setup for publication -->
	<definition name="publicationTypeSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationTypeSetupForm.jsp" />
	</definition>
	<!-- form for setup to add keyword to publication -->
	<definition name="keywordAddSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/keywordAddSetupForm.jsp" />
	</definition>
