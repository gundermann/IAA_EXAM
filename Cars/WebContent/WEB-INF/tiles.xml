	<definition name="authorForm" extends="mainLayout">
		<put-attribute name="content"
			value="/MasterDataManagement/authorForm.jsp" />
	</definition>

	<!-- ADMONITIONMANAGEMENT -->
	<!-- the list of delayed lendings to manage admonition processes-->
	<definition name="admonitionManagement" extends="mainLayout">
		<put-attribute name="content"
			value="/AdmonitionManagement/admonitionManagement.jsp" />
	</definition>

