	<definition name="keywordDeleteSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/keywordDeleteSetupForm.jsp" />
	</definition>
	<!-- form for setup to add author to publication -->
	<definition name="authorAddSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/authorAddSetupForm.jsp" />
	</definition>
	<!-- form for setup to delete author from publication -->
	<definition name="authorDeleteSetup" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/authorDeleteSetupForm.jsp" />
	</definition>
	<!-- detail view for publication-->
	<definition name="publicationDetail" extends="mainLayout">
		<put-attribute name="content"
			value="/InventoryManagement/publicationDetail.jsp" />
	</definition>


	<!-- MASTERDATAMANAGEMENT -->
	<!-- menu of master data management -->
	<definition name="masterDataManagement" extends="mainLayout">
		<put-attribute name="content"
			value="/MasterDataManagement/masterDataManagement.jsp" />
	</definition>
	<!-- List of publicationstypes -->
	<definition name="publicationTypeList" extends="mainLayout">
		<put-attribute name="content"
			value="/MasterDataManagement/publicationTypeList.jsp" />
	</definition>
	<!-- Form for new publicationtype -->
	<definition name="publicationTypeForm" extends="mainLayout">
		<put-attribute name="content"
			value="/MasterDataManagement/publicationTypeForm.jsp" />
	</definition>
