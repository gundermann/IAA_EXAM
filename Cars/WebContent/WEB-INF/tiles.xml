<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!-- The main layout. -->
	<definition name="mainLayout" template="/layout/mainLayout.jsp">
		<put-attribute name="title" value="Cars"/>
		<put-attribute name="header" value="/header.jsp"/>
	</definition>
	
	

	<!-- The list screen for all cars. -->
	<definition name="carList" extends="mainLayout">
		<put-attribute name="content" value="/carList.jsp"/>
	</definition>

	<!-- The form for a single car. -->
	<definition name="carForm" extends="mainLayout">
		<put-attribute name="content" value="/carForm.jsp"/>
	</definition>
	
	<!-- Die Liste der Säumnisse. -->
	<definition name="failureList" extends="mainLayout">
		<put-attribute name="content" value="/failureList.jsp"/>
	</definition>
	
	<definition name="searchForm" extends="mainLayout">
		<put-attribute name="content" value="/searchForm.jsp"/>
	</definition>

	<!-- Das Menü für die Bestandsverwaltung -->
	<definition name="inventoryManagement" extends="mainLayout">
		<put-attribute name="content" value="/inventoryManagement.jsp"/>
	</definition>
	
	<!-- Formular für neue Publikation -->
	<definition name="publicationForm" extends="mainLayout">
		<put-attribute name="content" value="/publicationForm.jsp"/>
	</definition>
	
	<!-- Menü für die Stammdatenverwaltung -->
	<definition name="masterDataManagement" extends="mainLayout">
		<put-attribute name="content" value="/masterDataManagement.jsp"/>
	</definition>
	
	<!-- Liste der Publikationsarten -->
	<definition name="publicationTypeList" extends="mainLayout">
		<put-attribute name="content" value="/publicationTypeList.jsp"/>
	</definition>
	
	<!-- Liste der Schlüsselwörter -->
	<definition name="keywordList" extends="mainLayout">
		<put-attribute name="content" value="/keywordList.jsp"/>
	</definition>
	
	<!-- Liste der Ausleiher -->
	<definition name="lenderList" extends="mainLayout">
		<put-attribute name="content" value="/lenderList.jsp"/>
	</definition>
	
	<!-- Formular für neues Schlüsselwort -->
	<definition name="keywordForm" extends="mainLayout">
		<put-attribute name="content" value="/keywordForm.jsp"/>
	</definition>
</tiles-definitions>
